  },
  "dependencies": {
    "request": "^2.81.0"
  },
  "flow": {
  "actions": [
    {
      "id": "powerstate_deepStandy",
      "title": {
        "en": "deep standby mode"
      },
      "hint": {
        "en": "No Software Control will be possible, after executing of this Command!"
      }
    },
    {
      "id": "powerstate_restart_e2",
      "title": {
        "en": "reboot enigma2 software"
      }
    },
    {
      "id": "powerstate_rebootBox",
      "title": {
        "en": "reboot receiver"
      }
    },
    {
      "id": "command_send",
      "title": {
        "en": "send command as ID"
      },
      "hint": {
        "en": "For supported Command ID's please look at http://enigma2.carpe3-noctem.eu"
      },
      "args": [
        {
          "name": "command",
          "type": "number",
          "step": 1,
          "placeholder": {
            "en": "command ID"
          }
        }
      ]
    },
    {
      "id": "message_send",
      "title": {
        "en": "send message"
      },
      "hint": {
        "en": "Message needs the following format: \n\nType|Timeout|Text \n\nTypes: \n0 = YES / NO \n1 = INFO \n2 = MESSAGE \n3 = ATTENTION \nTimeout = Seconds or 0 for endless display \nMessage = Your Text"
      },
      "args": [
        {
          "name": "msg_text_full",
          "type": "text",
          "placeholder": {
            "en": "Message Text"
          }
        
        }
      ]
    },
    {
      "id": "powerstate_off",
      "title": {
        "en": "standby mode"
      }
    },
    {
      "id": "powerstate_on",
      "title": {
        "en": "standby wake"
      }
    },
    {
      "id": "vol_mute",
      "title": {
        "en": "Volume mute"
      }
    },
    {
      "id": "vol_set",
      "title": {
        "en": "set Volume to (0-100)"
      },
      "args": [
        {
          "name": "volume",
          "type": "number",
          "min": 0,
          "max": 100,
          "step": 1,
          "placeholder": {
            "en": "Volume set (0% - 100%)"
          }
        }
      ]
    },
    {
      "id": "vol_unmute",
      "title": {
        "en": "Volume unmute"
      }
    }
  ]
}
}