  "flow": {
  "actions": [
    {
      "id": "powerstate_on",
      "title": {
        "en": "Wake from Standby",
        "nl": "Wakker vanuit stand-by"
      }
    },
    {
      "id": "powerstate_off",
      "title": {
        "en": "Send to Standby",
        "nl": "Verzenden naar stand-by"
      }
    },
    {
      "id": "powerstate_restart_e2",
      "title": {
        "en": "Reboot enigma2 software",
        "nl": "Start de enigma2-software opnieuw"
      }
    },
    {
      "id": "powerstate_rebootBox",
      "title": {
        "en": "Reboot Receiver",
        "nl": "start de ontvanger opnieuw op"
      }
    },
    {
      "id": "powerstate_deepStandy",
      "title": {
        "en": "Deep Standby",
        "nl": "Diepe standby-modus"
      },
      "hint": {
        "en": "No Software Control will be possible, after executing of this Command!",
        "nl": "Geen enkele softwarebesturing is mogelijk, na het uitvoeren van dit commando!"
      }
    },
    {
      "id": "vol_mute",
      "title": {
        "en": "Mute Volume",
        "nl": "Volume dempen"
      }
    },
    {
      "id": "vol_unmute",
      "title": {
        "en": "Unmute Volume",
        "nl": "demp het volume"
      }
    },
    {
      "id": "vol_set",
      "title": {
        "en": "Set Volume to (0-100)",
        "nl": "Volume instellen op (0-100)"
      },
      "args": [
        {
          "name": "volume",
          "type": "number",
          "min": 0,
          "max": 100,
          "step": 1,
          "placeholder": {
            "en": "Set Volume from 0 to 100",
            "nl": "Stel het volume in van 0 tot 100"
          }
        }
      ]
    }
  ]
}
}